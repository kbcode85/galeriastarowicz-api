{
  "collectionName": "components_subscription_price_options",
  "info": {
    "displayName": "Price Options",
    "description": "Opcje cenowe dla różnych typów subskrypcji"
  },
  "options": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "one_time",
        "subscription"
      ],
      "required": true
    },
    "duration": {
      "type": "enumeration",
      "enum": [
        "monthly",
        "yearly"
      ],
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "currency": {
      "type": "string",
      "required": true,
      "default": "PLN"
    },
    "promotionalPrice": {
      "type": "decimal",
      "min": 0
    },
    "promotionValidUntil": {
      "type": "datetime"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
} 
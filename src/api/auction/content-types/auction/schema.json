{
  "kind": "collectionType",
  "collectionName": "auctions",
  "info": {
    "singularName": "auction",
    "pluralName": "auctions",
    "displayName": "Auction"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "product": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product.product",
      "required": true
    },
    "startPrice": {
      "type": "decimal",
      "required": true
    },
    "currentPrice": {
      "type": "decimal",
      "required": true
    },
    "minBidIncrement": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "active",
        "ended",
        "cancelled"
      ],
      "default": "pending",
      "required": true
    },
    "winner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "bids": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::bid.bid",
      "mappedBy": "auction"
    }
  }
} 
{
  "kind": "collectionType",
  "collectionName": "subscription_plans",
  "info": {
    "singularName": "subscription-plan",
    "pluralName": "subscription-plans",
    "displayName": "Subscription Plan",
    "description": "Plany subskrypcji dostÄ™pne w systemie"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "level": {
      "type": "enumeration",
      "enum": [
        "basic",
        "premium",
        "premium_plus"
      ],
      "required": true,
      "unique": true
    },
    "prices": {
      "type": "component",
      "component": "subscription.price-options",
      "repeatable": true,
      "required": true,
      "min": 1
    },
    "features": {
      "type": "component",
      "component": "subscription.features",
      "repeatable": true,
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment.payment",
      "mappedBy": "subscriptionPlan"
    }
  }
} 